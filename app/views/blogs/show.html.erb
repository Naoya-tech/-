<div class="d-flex align-items-center mt-4 mb-4">
  <div class="ml-auto boards__linkBox">
    <%= link_to '一覧', blogs_path, class: 'btn btn-outline-dark'%>
    <%= link_to '編集', edit_blog_path(@blog), class: 'btn btn-outline-dark'%>
  </div>
</div>

<% if flash[:notice] %>
<div class="alert alert-primary"><%= flash[:notice] %></div>
<% end %>

<div class="card">
  <div class="card-header">
    <h4><%= @blog.title %></h4>
  </div>
  <div class="card-body">
    <p class="card-text"><%= simple_format(@blog.body) %></p>
    <p class="text-right font-weight-bold mr-10"><%= @blog.name %></p>
  </div>
</div>

<div class="p-comment__list">
  <div class="p-comment_listTitle">コメント</div>
  <div class="p-comment__item">
  <%= render @blog.comments %>
  </div>
</div>


<div class="p-comment__formBox">
  <p class="p-comment__formTitle">コメント記入</p>
  <%= form_with model:@comment do |f| %>
    <%= f.hidden_field :blog_id %>
    <div class="form-group">
      <%= f.label :name, '名前' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :comment, 'コメント' %>
      <%= f.text_area :comment, class: 'form-control', rows: 4 %>
    </div>
    <%= f.submit '送信', class: 'btn btn-primary' %>
  <% end %>
</div>